<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="mainAnchor" prefHeight="320.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.se2018.gui.IncrementDecrementController">
   <children>
      <ImageView fx:id="backImg" fitHeight="320.0" fitWidth="450.0">
         <image>
            <Image url="@../images/client/Back.png" />
         </image>
      </ImageView>
      <Text fx:id="questionText" layoutX="40.0" layoutY="173.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Do you want increase or decrease by one the value of the chosen die?" />
      <AnchorPane fx:id="btBox" layoutX="73.0" layoutY="188.0" prefHeight="49.0" prefWidth="260.0">
         <children>
            <Button fx:id="increaseBt" layoutY="4.0" mnemonicParsing="false" onAction="#handleIncreaseButtonAction" prefHeight="73.0" prefWidth="150.0" text="Increase">
               <graphic>
                  <ImageView fitHeight="65.0" fitWidth="65.0">
                     <image>
                        <Image url="@../images/dice/Red/1red.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="decreaseBt" layoutX="151.0" layoutY="4.0" mnemonicParsing="false" onAction="#handleDecreaseButtonAction" prefHeight="73.0" prefWidth="150.0" text="Decrease">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="60.0">
                     <image>
                        <Image url="@../images/dice/Blue/6blue.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
